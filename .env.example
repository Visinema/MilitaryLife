# Shared
NODE_ENV=development

# API
API_PORT=4000
API_HOST=0.0.0.0
DATABASE_URL=postgres://postgres:postgres@localhost:5432/military_sim
# Optional Railway fallbacks (resolver will use these when DATABASE_URL is missing/invalid)
# DATABASE_PRIVATE_URL=
# DATABASE_PUBLIC_URL=
# PGHOST=
# PGPORT=5432
# PGDATABASE=
# PGUSER=
# PGPASSWORD=
SESSION_SECRET=replace-with-strong-secret
COOKIE_SECRET=replace-with-strong-secret
SESSION_DAYS=30
PAUSE_TIMEOUT_MINUTES=30
CORS_ORIGIN=https://militarylife.vercel.app,http://localhost:3000
AUTO_MIGRATE_ON_BOOT=true
AUTO_MIGRATE_STRICT=true
DB_HEALTHCHECK_TIMEOUT_MS=5000
DB_HEALTHCHECK_INTERVAL_MS=5000
DB_POOL_MAX=20
DB_SSL_MODE=auto
STARTUP_DB_CHECK_STRICT=false

# Web
NEXT_PUBLIC_API_BASE=/api/v1
BACKEND_ORIGIN=http://localhost:4000
# Optional major.minor base for dashboard version (patch auto-generated per build/commit)
# NEXT_PUBLIC_APP_VERSION=5.0
# Optional emergency override (avoid for normal deploy flow)
# NEXT_PUBLIC_APP_VERSION_OVERRIDE=5.0.0

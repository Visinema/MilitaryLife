{
  "name": "@mls/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "prebuild": "corepack pnpm --filter @mls/shared build",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate": "tsx src/db/migrate.ts",
    "pretypecheck": "corepack pnpm --filter @mls/shared build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo 'api: no lint configured'"
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.1.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.1.0",
    "pg": "^8.13.1",
    "zod": "^3.24.1",
    "@mls/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
